@using MuSu.Data 
@using System.Linq  

@model List<Song>  

@{
    ViewData["Title"] = "Recommendation";
}

<div class="text-center">
    <h1 class="display-4">Your Recommendation</h1>

    <form>
        <button>Genre - - X</button>
    </form>
    
    <form>
        <button>Artist - - X</button>
    </form>

    <form>
        <button>Mood - - X</button>
    </form>

    @if (Model != null && Model.Any())
    {
        <h2>Recommended Song:</h2>
        <p><strong>@Model.FirstOrDefault()?.SongTitle</strong> - @Model.FirstOrDefault()?.Artist?.ArtistName</p>
        <p>Open In:</p>

        <form>
            <button>YouTube</button>
        </form>

        <form>
            <button>Spotify</button>
        </form>

        <form>
            <button>Apple Music</button>
        </form>
    }
    else
    {
        <p>No recommendations available for the selected moods.</p>
    }
</div>
